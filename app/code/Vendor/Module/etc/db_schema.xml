<?xml version="1.0" encoding="utf-8" ?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="info_block" resource="default" engine="innodb" comment="Info Block Table">
        <column xsi:type="int" name="info_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Info ID"/>
        <column xsi:type="varchar" name="title" nullable="false" length="255" comment="Title"/>
        <column xsi:type="varchar" name="short_description" nullable="true" length="1024" comment="Short Description"/>
        <column xsi:type="int" name="priority" padding="10" unsigned="true" nullable="false" default="0" comment="Priority"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="info_id"/>
        </constraint>
    </table>
</schema>
